{{> Header }}

<h1>{{title}}</h1>

{{# unless pokemon }}
<p>No Pokemon in the database! Please add one first.</p>
{{ else }}
<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Type</th>
		</tr>
	</thead>
	<tbody>
		{{# each pokemon }}
		<tr pokemon-id="{{ id }}">
			<td>
				<a href="http://localhost:3000/pokemon/{{ id }}">
					{{ name }}
				</a>
			</td>
			<td>
				{{ type }}
			</td>
		</tr>
		{{/each}}
	</tbody>
</table>
{{/ unless }}

{{> Footer }}
